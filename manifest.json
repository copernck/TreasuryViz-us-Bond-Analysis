{
  "manifest_version": 3,
  "name": "TreasuryViz - US Treasury Bond Analysis",
  "version": "1.0.0",
  "description": "Professional US Treasury bond analysis tool with real-time yields, yield curve visualization, and comparison features",
  "author": "TreasuryViz Team",
  "homepage_url": "https://github.com/treasuryviz/treasuryviz-extension",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "TreasuryViz",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://api.treasury.gov/*",
    "https://www.federalreserve.gov/*",
    "https://fred.stlouisfed.org/*"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "treasuryviz@extension.com",
      "strict_min_version": "100.0"
    }
  }
}